<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp"
    android:gravity="center">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la nota"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:ems="10" >

    </TextView>

    <TextView
        android:id="@+id/txtDateOfCreation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha creación"
        android:textSize="16sp"
                android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:lines="10"
        android:hint="Lorem Ipsum es simplemente el texto de relleno de las imprentas y archivos de texto. Lorem Ipsum ha sido el texto de relleno estándar de las industrias desde el año 1500, cuando un impresor (N. del T. persona que se dedica a la imprenta) desconocido usó una galería de textos y los mezcló de tal manera que logró hacer un libro de textos especimen. "
        android:layout_marginBottom="5dp"/>

</LinearLayout>
